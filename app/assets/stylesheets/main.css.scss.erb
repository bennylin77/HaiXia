//===============================about===========================//
.about{
  background-image: url('<%= asset_path 'about/about_bg.png' %>');
  background-size: cover; 
  background-position: center center;
  position: relative;
}
.about_en{
  position: relative;  
  top: 100px;  
  font-size: 40px;
  font-style: italic; 
  font-family:Georgia; 
}
.about_ch{
    color: #585757;
    position: relative;  
    font-size: 16px;   
    top: 100px;  
    visibility: hidden;   
    position: relative;     
}
.about_ch h2.no-background {
    position: relative;
    overflow: hidden;  
    .text {
        display: inline-block;
        vertical-align: baseline;
        zoom: 1;
        *display: inline;
        *vertical-align: auto;
        position: relative;
        padding: 0 20px;
        font-size: 18px;
        letter-spacing: 2px;
        &:before, &:after {
            content: '';
            display: block;
            width: 1000px;
            position: absolute;
            top: 0.5em;
            border-top: 1px solid #585757;
        }
        &:before { right: 100%; }
        &:after { left: 100%; }
    }
}
.about_since{
  visibility: hidden;    
  position: relative;  
  top: 130px;  
  font-size: 18px; 
  letter-spacing: 2px; 
}
.about_description{
  visibility: hidden;    
  position: relative;  
  top: 160px;  
  font-size: 14px;    
  letter-spacing: 3px;
}
