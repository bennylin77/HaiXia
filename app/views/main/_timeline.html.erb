            border: 3px solid #c5a063; 
            color: #c5a063;      
		    font-size: 25px;
			font-style: italic; 
			font-family:Georgia; 
			background: #ffffff;    
			cursor: pointer;                      	
        }
        .timeline > li > .timeline-badge-more:hover{
        	color: #ffffff;
        	background: #c5a063;
        }
        
        .timeline > li.timeline-inverted > .timeline-panel {
            float: right;
        }

            .timeline > li.timeline-inverted > .timeline-panel:before {
                border-left-width: 0;
                border-right-width: 18px;
                left: -18px;
                right: auto;
            }

            .timeline > li.timeline-inverted > .timeline-panel:after {
                border-left-width: 0;
                border-right-width: 14px;
                left: -14px;
