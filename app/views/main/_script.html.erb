<script>
    $('body').on('click', '.page-scroll a', function(event) {
    	event.preventDefault();
        var $anchor = $(this);
        $('html, body').stop().animate({
            scrollTop: $($anchor.attr('href')).offset().top
        }, 1000);
    });
    
    
	// function to be used to retrieve variable
	function getWindowHeight() {
		return windowHeight;
	}	
	// update window height on resize
	$(window).on("resize", function () {
			windowHeight = $(window).innerHeight();
	});	
	// init controller
	var controller = new ScrollMagic.Controller();
	//top
	var tween = new TweenMax.fromTo(".arrow_down", 0.8,
									{top: 0},
									{top: 20, repeat: -1, yoyo: true, ease: Circ.easeInOut});
	//about   
	tween = new TweenMax.from(".about_en", 2, {top: "50px", ease: Linear.easeNone})	      
	new ScrollMagic.Scene({triggerElement: "#section_about"})
				  .setTween(tween)
				  .addTo(controller)	  
	tween = new TimelineLite();
	tween.to(".about_ch", 5, {autoAlpha: 1, ease: Linear.easeNone})
		 .to(".about_since", 1, {autoAlpha: 1, ease: Linear.easeNone})
		 .to(".about_description", 1, {autoAlpha: 1, ease: Linear.easeNone})		 
	tween.timeScale(3) //play faster   
	new ScrollMagic.Scene({triggerElement: "#section_about"})
				  .setTween(tween)
				  .addTo(controller) 
	//about_manager
	var controller_manager = new ScrollMagic.Controller({globalSceneOptions: {triggerHook: "onEnter", duration: "250%"}});
	function move (what, progress) {
	    var to = progress * 30;
	    TweenMax.to(what, 1, {y: '-'+to + "%", overwrite: 5, force3D: true});
	}
	new ScrollMagic.Scene({triggerElement: "#parallax1"})
                .on("progress", function (e) {
                    move ("#parallax1 > div", e.progress);
                })
       	        .addTo(controller_manager);	
       	        	
	//tween = new TimelineLite();       	         
	//tween.fromTo(".horizontal_line_1", 1, {width:0, ease: Linear.easeNone}, {width:'100%', ease: Linear.easeNone})
	//	 .fromTo(".horizontal_line_2", 1, {width:0, ease: Linear.easeNone}, {width:'100%', ease: Linear.easeNone})	  		  	 

       	         
	tween = new TimelineLite();
	tween.fromTo(".horizontal_line_1", 2, {width:0, ease: Linear.easeNone}, {width:'100%', ease: Linear.easeNone})
		 .fromTo(".horizontal_line_2", 2, {width:0, ease: Linear.easeNone}, {width:'100%', ease: Linear.easeNone})	  		  	
		 .to(".about_manager_quote_content", 3, {autoAlpha: 1, ease: Linear.easeNone})
		 .to(".about_manager_content_1", 1, {autoAlpha: 1, ease: Linear.easeNone})
		 .to(".about_manager_content_2", 1, {autoAlpha: 1, ease: Linear.easeNone})
		 .to(".about_manager_content_3", 1, {autoAlpha: 1, ease: Linear.easeNone})		 
		 .to(".about_manager_content_4", 1, {autoAlpha: 1, ease: Linear.easeNone})	
		 .to(".about_manager_position", 1, {autoAlpha: 1, ease: Linear.easeNone})	
		 .from(".about_manager_position", 4, {top: "45px", ease: Linear.easeNone})	      
	//tween = new TweenMax.from(".about_manager_position", 2, {top: "50px", ease: Linear.easeNone})	      
		 
		 	 
	tween.timeScale(3) //play faster   
	new ScrollMagic.Scene({triggerElement: ".about_manager_content"})
				  .setTween(tween)
				  .addTo(controller)        	        
       	        
       	                 
	      
</script>